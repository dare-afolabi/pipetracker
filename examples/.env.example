# Example environment variables for Pipetracker plugins and configuration
# Copy this file to .env and replace placeholder values with your credentials
# All variables are required unless marked as optional

# AWS S3 Plugin
# Credentials for accessing AWS S3 buckets
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Cloud Storage (GCS) Plugin
# Path to the JSON credentials file for GCS service account
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Kafka Plugin
# SASL/PLAIN credentials for Kafka authentication
KAFKA_SASL_USERNAME=your-username
KAFKA_SASL_PASSWORD=your-password
# Optional: Kafka bootstrap server(s) (default: localhost:9092)
# Specify if not provided in log_sources (e.g., kafka://broker1,broker2/topic)
KAFKA_BOOTSTRAP=broker1:9092,broker2:9092

# Datadog Plugin
# API and application keys for Datadog authentication
DD_API_KEY=your-api-key
DD_APP_KEY=your-app-key
# Optional: Datadog site (e.g., datadoghq.com for US, datadoghq.eu for EU)
DD_SITE=datadoghq.com

# General Security
# Encryption key for log encryption/decryption (required if encrypt_logs is true)
APP_SECRET_KEY=your-encryption-key

# General Configuration (Optional)
# Service name for logging and identification (default: pipetracker)
SERVICE_NAME=pipetracker
# Debug mode for additional logging (default: false)
DEBUG=false